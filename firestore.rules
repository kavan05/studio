
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Businesses: Publicly readable, admin-only writable.
    match /businesses/{businessId} {
      allow get, list: if true;
      allow create, update, delete: if false; // Managed by backend process
    }

    // Users: Can only be created, read, or updated by the owner.
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete, list: if false;
    }
  }
}
