# Firebase client configuration (public, safe to commit)
# Find these in your Firebase Project Settings > General > Your apps > Config
NEXT_PUBLIC_FIREBASE_API_KEY="AIza..."
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="1234567890"
NEXT_PUBLIC_FIREBASE_APP_ID="1:1234567890:web:abcdef123456"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-ABCDEFGHIJ"

# URL for the backend API for the Next.js app to call
# For local dev, this points to your functions emulator.
# Replace 'your-project-id' with your actual Firebase project ID.
NEXT_PUBLIC_API_URL="http://127.0.0.1:5001/your-project-id/us-central1/api/api/v1"

# --- Server-Side Function Variables (used by Firebase Functions) ---

# These are the resource IDs from your data sources (e.g., Ontario Open Data)
# These are secrets and should only be in .env.local
ONTARIO_DATA_RESOURCE_ID="your-ontario-resource-id"
BC_DATA_RESOURCE_ID="your-bc-resource-id"
ALBERTA_DATA_RESOURCE_ID="your-alberta-resource-id"

# Daily API rate limit per user
RATE_LIMIT_PER_DAY="1000"
