{
  "entities": {
    "user": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "profession": {
          "type": "string",
          "description": "The user's profession."
        },
        "referralSource": {
          "type": "string",
          "description": "How the user heard about the service."
        },
        "apiKey": {
          "type": "string",
          "description": "The API key for the user."
        },
        "usage": {
          "type": "number",
          "description": "The user's API usage."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": [
        "uid",
        "email",
        "name"
      ]
    },
    "business": {
      "title": "Business",
      "description": "Represents a business listing.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "province": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/businesses/{businessId}": {
      "schema": {
        "$ref": "#/entities/business"
      },
      "description": "Stores business directory listings."
    }
  }
}
